<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yiantzi.mypracticeset1mycard.MainActivity">

    <ImageView
        android:src="@drawable/ranch3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        style="@style/MyStyle"
        android:text="@string/text_at_the_top"
        android:id="@+id/textView2" />

    <TextView
        style="@style/MyStyle"
        android:layout_alignParentBottom="true"
        android:text="@string/text_at_the_bottom"
        android:id="@+id/textView1" />

    <Button
        android:text="@string/text_at_the_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:id="@+id/myButton"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentEnd="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault" />


</RelativeLayout>